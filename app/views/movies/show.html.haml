%h2= @movie.title
%h4.subheader= @movie.release_dates.dvd
.row
  .large-4.columns
    = image_tag @movie.posters.original
  .large-8.columns
    %p= @movie.synopsis
.row
  .large-4.large-offset-8.columns
    - if !current_user.wanted_movie?(@movie)
      = form_tag flagged_movies_path, method: :post do |f|
        = hidden_field_tag :movie_id, @movie.id
        = submit_tag 'Add to wanted', class: 'small button secondary'
    - else
      = form_tag flagged_movie_path(@movie.id), method: :delete do |f|
        = hidden_field_tag :movie_id, @movie.id
        = submit_tag 'Remove from wanted', class: 'small button secondary'

